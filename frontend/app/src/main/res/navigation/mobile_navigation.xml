<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ru.kapuchinka.kinosklad.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_filmsFragment"
            app:destination="@id/filmsFragment" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_search"
            app:destination="@id/navigation_search" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_favorites"
            app:destination="@id/navigation_favorites" />
        <action
            android:id="@+id/action_navigation_home_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="ru.kapuchinka.kinosklad.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_navigation_favorites_to_filmPageFragment"
            app:destination="@id/filmPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="ru.kapuchinka.kinosklad.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_filmPageFragment"
            app:destination="@id/filmPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="ru.kapuchinka.kinosklad.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_navigation_profile_to_authFragment"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.kapuchinka.kinosklad.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/filmsFragment"
        android:name="ru.kapuchinka.kinosklad.ui.films.FilmsFragment"
        android:label="fragment_films"
        tools:layout="@layout/fragment_films" >
        <action
            android:id="@+id/action_filmsFragment_to_filmPageFragment"
            app:destination="@id/filmPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/filmPageFragment"
        android:name="ru.kapuchinka.kinosklad.ui.filmpage.FilmPageFragment"
        android:label="fragment_film_page"
        tools:layout="@layout/fragment_film_page" >
        <action
            android:id="@+id/action_filmPageFragment_to_addFeedBackFragment"
            app:destination="@id/addFeedBackFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFeedBackFragment"
        android:name="ru.kapuchinka.kinosklad.ui.feedback.AddFeedBackFragment"
        android:label="fragment_add_feed_back"
        tools:layout="@layout/fragment_add_feed_back" >
        <action
            android:id="@+id/action_addFeedBackFragment_to_filmPageFragment"
            app:destination="@id/filmPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="ru.kapuchinka.kinosklad.ui.profile.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.kapuchinka.kinosklad.ui.profile.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="ru.kapuchinka.kinosklad.ui.profile.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="ru.kapuchinka.kinosklad.ui.profile.editprofile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_changeNickFragment"
            app:destination="@id/changeNickFragment" />
        <action
            android:id="@+id/action_editProfileFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/changeNickFragment"
        android:name="ru.kapuchinka.kinosklad.ui.profile.editprofile.changenick.ChangeNickFragment"
        android:label="fragment_change_nick"
        tools:layout="@layout/fragment_change_nick" >
        <action
            android:id="@+id/action_changeNickFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="ru.kapuchinka.kinosklad.ui.profile.editprofile.changepassword.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" >
        <action
            android:id="@+id/action_changePasswordFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>
</navigation>