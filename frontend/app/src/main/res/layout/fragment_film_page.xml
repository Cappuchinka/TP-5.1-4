<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".ui.filmpage.FilmPageFragment">

    <ScrollView
        android:id="@+id/scroll_film_page"
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/lightBlue">

        <LinearLayout
            android:id="@+id/lin_layout_page_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lightBlue">

            <LinearLayout
                android:id="@+id/film_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/page_film_poster"
                    android:layout_width="312dp"
                    android:layout_height="315dp"
                    android:layout_gravity="center"
                    android:src="@drawable/poster" />

                <TextView
                    android:id="@+id/page_film_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Звёздные войны: Скайуокер. Восход"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/page_film_country_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="США (2019)"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/page_film_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/describtion_film"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button_feedback"
                    android:layout_width="124dp"
                    android:layout_height="53dp"
                    android:layout_marginLeft="32dp"
                    android:backgroundTint="@color/itemCategoryFilms"
                    android:text="Оценить"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:cornerRadius="0dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/lightBlue"
                android:id="@+id/r_v_feedbacks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_feedback_layout"
                tools:itemCount="5"
                android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>