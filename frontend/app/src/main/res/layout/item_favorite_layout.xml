<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemCategoryFilms"
    android:layout_margin="8dp"
    android:backgroundTint="@color/itemCategoryFilms">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/itemCategoryFilms"
        android:layout_margin="4dp"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_fav_film_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/itemCategoryFilms"
                android:gravity="center|left"
                android:text="Film Name"
                android:textColor="@color/black"
                android:paddingLeft="16sp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_fav_film_country"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/itemCategoryFilms"
                    android:gravity="center"
                    android:text="Film Country"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/item_fav_film_year"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/itemCategoryFilms"
                    android:gravity="center"
                    android:text="Film Year"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/button"
            android:layout_width="58dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/itemCategoryFilms"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/delete"
            android:text="X"
            android:textColor="@color/black"
            app:cornerRadius="0sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>